@model List<ProductDto>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-info"><i class="fas fa-plus"></i>&nbsp;Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductDto product in Model)
            {
                <tr>
                    <td width="15%">
                        <div class="card bg-dark text-white">
                            <img src="@product.ImageUrl" class="card-img" alt="@product.Name">
                            <div class="card-img-overlay">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                            </div>
                        </div>
                    </td>
                    <td><@product.CategoryName</td>
                    <td>@product.Price.ToString("c")</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-productId="@product.Id"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-productId="@product.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>